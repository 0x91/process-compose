root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 2
trim_trailing_whitespace = true
indent_style = space

[*.go]
indent_style = space
indent_size = 4

[*.yaml]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 4
